.row
  .col-md-4.col-md-offset-6
    = form_for @login_form, url: login_path, class: "form-signin" do |f|
      %h2.form-signin-heading
        Please sign in
      .form-group
        = f.text_field :email, class: "form-control", placeholder: "Email address", required: true, autofocus: true
        = f.password_field :password, class: "form-control", placeholder: "Password", required: true
      .form-group
        = f.submit 'Sign in', class: 'btn btn-primary'
