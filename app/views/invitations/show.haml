.row
  .col-md-4
    = form_for @login_form, url: invitations_path, class: "form-login" do |f|
      %h2.form-signin-heading
        Login

      .form-group
        = f.label :email
        = f.text_field :email, class: "form-control", placeholder: "Email address", required: true, autofocus: true
      .form-group
        = f.label :password
        = f.password_field :password, class: "form-control", placeholder: "Password", required: true
      .form-group
        = f.hidden_field :invite_code
        = f.submit 'Sign in', class: 'btn btn-primary'


  .col-md-4.col-md-offset-1
    = form_for @signup_form, url: invitations_path, class: "form-signup" do |f|
      %h2.form-signin-heading
        or Sign Up

      .form-group
        =f.label :name
        = f.text_field :name, class: "form-control", placeholder: "Your Name", required: true, autofocus: true
      .form-group
        = f.label :email
        = f.text_field :email, class: "form-control", placeholder: "Email address", required: true
      .form-group
        = f.label :password
        = f.password_field :password, class: "form-control", placeholder: "Password", required: true
      .form-group
        = f.label :password_confirmation, "Password Confirmation"
        = f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", required: true
      .form-group
        = f.hidden_field :invite_code
        = f.submit 'Sign in', class: 'btn btn-primary'
